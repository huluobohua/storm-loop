{
  "dashboard": {
    "id": null,
    "uid": "storm-production",
    "title": "STORM Production Dashboard",
    "tags": ["storm", "production", "academic"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "id": 1,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(storm_http_requests_total[5m])) by (status)",
            "legendFormat": "{{status}}"
          }
        ]
      },
      {
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "id": 2,
        "title": "Response Time (95th percentile)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(storm_http_request_duration_seconds_bucket[5m])) by (le))",
            "legendFormat": "95th percentile"
          }
        ]
      },
      {
        "gridPos": {"h": 8, "w": 8, "x": 0, "y": 8},
        "id": 3,
        "title": "Research Generation Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(storm_research_started_total[5m]))",
            "legendFormat": "Started"
          },
          {
            "expr": "sum(rate(storm_research_completed_total[5m]))",
            "legendFormat": "Completed"
          },
          {
            "expr": "sum(rate(storm_research_failed_total[5m]))",
            "legendFormat": "Failed"
          }
        ]
      },
      {
        "gridPos": {"h": 8, "w": 8, "x": 8, "y": 8},
        "id": 4,
        "title": "Active Users",
        "type": "stat",
        "targets": [
          {
            "expr": "storm_active_users_total",
            "legendFormat": "Active Users"
          }
        ]
      },
      {
        "gridPos": {"h": 8, "w": 8, "x": 16, "y": 8},
        "id": 5,
        "title": "CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=\"storm-production\"}[5m])) by (pod)",
            "legendFormat": "{{pod}}"
          }
        ]
      },
      {
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "id": 6,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(container_memory_working_set_bytes{namespace=\"storm-production\"}) by (pod)",
            "legendFormat": "{{pod}}"
          }
        ]
      },
      {
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "id": 7,
        "title": "Database Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "storm_postgres_connections_active",
            "legendFormat": "Active"
          },
          {
            "expr": "storm_postgres_connections_idle",
            "legendFormat": "Idle"
          },
          {
            "expr": "storm_postgres_connections_max",
            "legendFormat": "Max"
          }
        ]
      },
      {
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "id": 8,
        "title": "Redis Operations",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(redis_commands_total[5m])",
            "legendFormat": "Commands/sec"
          }
        ]
      },
      {
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "id": 9,
        "title": "API Rate Limiting",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(storm_rate_limit_exceeded_total[5m])) by (endpoint)",
            "legendFormat": "{{endpoint}}"
          }
        ]
      },
      {
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 32},
        "id": 10,
        "title": "Error Log Stream",
        "type": "logs",
        "targets": [
          {
            "expr": "{namespace=\"storm-production\", level=\"error\"}"
          }
        ]
      }
    ]
  }
}